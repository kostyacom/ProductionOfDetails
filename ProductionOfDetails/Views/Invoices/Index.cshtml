@model IEnumerable<ProductionOfDetails.Invoices>

@{
    ViewData["Title"] = "Index";
}

<h2>Invoices</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmployeeNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMaterialNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSupplierNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmployeeNavigation.IdEmployee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMaterialNavigation.IdMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSupplierNavigation.IdSupplier)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdInvoice">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdInvoice">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdInvoice">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
